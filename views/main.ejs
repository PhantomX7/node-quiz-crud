<% include ./partials/header %>
<div style="width: 30%; margin: 25px auto;">
    <h2>Peminjaman Kelas:</h2>
    <form action="/admin/class" method="POST">
        <div class="form-group">
            <label for="nama">Nama</label>
            <input class="form-control" type="text" name="nama" id="nama" placeholder="Masukkan nama" required>
        </div>
        <div class="form-group">
            <label for="name">Nim</label>
            <input class="form-control" type="text" name="nim" id="nim" placeholder="Masukkan Nim" required>
        </div>
        <div class="form-group">
            <label for="kelas">Kelas</label>
            <input class="form-control" id="kelas" name="kelas" placeholder="Masukkan kelas" required>
        </div>
        <div class="form-group">
            <label for="location">Tanggal</label>
            <input class="form-control" type="date" name="tanggal" id="tanggal" required>
        </div>
        <div class="form-group">
            <label for="alasan">Alasan</label>
            <textarea class="form-control" id="alasan" rows="8" name="alasan" placeholder="Masukkan alasan" required></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Request Kelas!</button>
        </div>
    </form>
    
    <a href="/admin/class">Admin page?</a>
</div>
<% include ./partials/footer %>
