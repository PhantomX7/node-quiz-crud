<% include ../partials/headerAdmin %>
<div>
  <div class="col-12 border rounded border-secondary m-2">
      <div class="m-2">
          <div class="caption-full">
            <h3 class="text-center">
              <%= classes.kelas %>
            </h3>
            <hr style="
              border: 0;
              height: 1px;
              background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));">
            <p>Nama: <%= classes.nama %></p>
            <p>Nim: <%= classes.nim %></p>
            <p>Alasan: <%= classes.alasan %></p>
            <p>Tanggal: <%= moment(classes.date).format("MMM Do YY") %></p>
            <div>
                 status: <%= classes.disetujui?"Approved":"Not Approved" %>
            </div>
            <p><em>Submitted when: <%= moment(classes.createdAt).fromNow() %></em></p>
          </div>
      </div>
  </div>
    <form action="/admin/class/<%=classes._id%>?_method=PUT" method="POST" enctype="multipart/form-data">

      <div class="form-check">
        <label class="form-check-label">
          <input type="checkbox" class="form-check-input" name="disetujui" value="<%= Boolean(classes.disetujui) %>">
          Finished
        </label>
      </div>
      <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Edit Persetujuan</button>
      </div>
    </form>
    <a href="/admin/class">Go Back</a>
</div>
<% include ../partials/footer %>
